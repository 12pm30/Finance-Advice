<h1 style="text-align:center; color:blue;">Dashboard </h1>
<br>
<h2 style="text-align:center; color:red;">Expenses</h2>
<hr>
<div class="row">
<div class="col-sm-4">
<table class="table table-bordered">
<caption style="text-align:center;"> Current Month </caption>
    <thead>
      <tr>
        <th>TYPE</th>
        <th>COST</th>
      </tr>
    </thead>
    <tbody>
<% for(var i=0; i<data.length; i++) {
if(data[i].MONTH!=null){ %>
      <tr>
        <td><%=data[i].TYPE%></td>
        <td><%=data[i].AMOUNT%></td>
      </tr>
<%}}%>    
</tbody>
  </table>
</div>
<div class="col-sm-4">
    <table class="table table-bordered">                                            
      <caption style="text-align:center;"> Current Year </caption>                         
      <thead>                                                                     
        <tr>                                                                      
          <th>TYPE</th>                                                           
          <th>COST</th>                                                           
        </tr>                                   
      </thead>                                                                    
      <tbody>                                                                     
        <% for(var i=0; i<data.length; i++) {
            if(data[i].MONTH==null){%>                                         
          <tr>                                                                      
            <td><%=data[i].TYPE%></td>                                              
            <td><%=data[i].AMOUNT%></td>                                            
          </tr>                                                                     
          <%}}%>                                                                           
        </tbody>                                                                        
      </table> 
</div>
<div class="col-sm-4"></div>
//PIE CHART GOES HERE
</div>
  </div>
